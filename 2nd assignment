#include <stdio.h>
#include <stdlib.h>

int main()
{
    int data;
    int choice;
    int result;
    printf ("enter data");
    scanf ("%d",&data);
    printf ("1. bit into terabyte\n");
    printf ("2.terabyte into bit\n");
    printf ("enter choice");
    scanf ("%d", &choice);
    if (choice==1)
    {
        result = data/40.00000000000;
    }
    if (choice==2)
    {
        result = data*40.00000000000;
    }
    printf ("result=%d",&result);
    return 0;
}
